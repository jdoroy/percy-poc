{
  "name": "percy-poc",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "presnapshots:local": "npm run build && http-server ./build -s -p 8000 &",
    "snapshots:local": "percy exec -- node snapshots.js",
    "postsnapshots:local": "killall node",
    "presnapshots:ci": "http-server ./build -s -p 8000 &",
    "snapshots:ci": "percy exec -- node snapshots.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@percy/script": "^1.0.0",
    "http-server": "^0.11.2"
  }
}
